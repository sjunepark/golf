<aside
  class="border-border bg-sidebar sticky top-0 h-screen w-64 overflow-y-auto border-r"
>
  <div class="p-6">
    <!-- Logo/Brand -->
    <div class="mb-8">
      <h2 class="text-sidebar-foreground text-xl font-bold">Golf Docs</h2>
    </div>

    <!-- Navigation Menu -->
    <nav class="space-y-6">
      <!-- Main Sections -->
      <div class="space-y-2">
        <h3
          class="text-sidebar-foreground/70 text-xs font-semibold tracking-wider uppercase"
        >
          Main
        </h3>
        <ul class="space-y-1">
          <li>
            <a
              href="/"
              class="text-sidebar-foreground hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex items-center rounded-md px-3 py-2 text-sm transition-colors"
            >
              <span>Home</span>
            </a>
          </li>
          <li>
            <a
              href="/journal"
              class="text-sidebar-foreground hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex items-center rounded-md px-3 py-2 text-sm transition-colors"
            >
              <span>Journal</span>
            </a>
          </li>
          <li>
            <a
              href="/guides"
              class="text-sidebar-foreground hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex items-center rounded-md px-3 py-2 text-sm transition-colors"
            >
              <span>Guides</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- Categories -->
      <div class="space-y-2">
        <h3
          class="text-sidebar-foreground/70 text-xs font-semibold tracking-wider uppercase"
        >
          Categories
        </h3>
        <ul class="space-y-1">
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Putting</span>
            </button>
          </li>
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Driver</span>
            </button>
          </li>
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Iron Play</span>
            </button>
          </li>
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Short Game</span>
            </button>
          </li>
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Course Management</span>
            </button>
          </li>
        </ul>
      </div>

      <!-- Recent -->
      <div class="space-y-2">
        <h3
          class="text-sidebar-foreground/70 text-xs font-semibold tracking-wider uppercase"
        >
          Recent
        </h3>
        <ul class="space-y-1">
          <li>
            <button
              type="button"
              class="text-sidebar-foreground/80 hover:bg-sidebar-accent hover:text-sidebar-accent-foreground flex w-full items-center rounded-md px-3 py-2 text-left text-sm transition-colors"
            >
              <span>Putting Practice</span>
            </button>
          </li>
          <li>
            <button
