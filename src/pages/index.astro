---
import "../styles/global.css";
import { Font } from "astro:assets";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Sidebar from "@/components/Sidebar.astro";

const title = "Golf Docs - Your Personal Golf Documentation";
const description =
  "Track your golf progress, document techniques, and improve your game with structured guides and practice journals.";
const canonicalURL = new URL(
  Astro.url.pathname,
  Astro.site || "http://localhost:4321",
);
---

<script is:inline>
  const getThemePreference = () => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    return window.matchMedia("(prefers-color-scheme: dark)").matches
      ? "dark"
      : "light";
  };
  const isDark = getThemePreference() === "dark";
  document.documentElement.classList[isDark ? "add" : "remove"]("dark");

  if (typeof localStorage !== "undefined") {
    const observer = new MutationObserver(() => {
      const isDark = document.documentElement.classList.contains("dark");
      localStorage.setItem("theme", isDark ? "dark" : "light");
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ["class"],
    });
  }
</script>

<html lang="en">
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Font preloads -->
    <Font cssVariable="--font-inter" preload />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
  </head>
  <body class="flex min-h-screen">
    <!-- Sidebar -->
    <Sidebar />

    <!-- Main Content Area -->
    <div class="flex flex-1 flex-col">
      <Header />

      <main class="flex-1 overflow-x-hidden px-8 py-8">
        <!-- Hero Section -->
        <section class="space-y-6 py-16 text-center">
          <h1 class="text-foreground text-4xl font-bold md:text-6xl">
            Golf Documentation
          </h1>
          <p class="text-muted-foreground mx-auto max-w-2xl text-xl">
            Track your progress, document techniques, and improve your game with
            structured guides and practice journals.
          </p>
          <div class="mt-8 flex flex-col justify-center gap-4 sm:flex-row">
            <button
              class="bg-primary text-primary-foreground hover:bg-primary/90 rounded-lg px-6 py-3 font-medium transition-colors"
            >
              Start Journaling
            </button>
            <button
              class="border-border text-foreground hover:bg-muted rounded-lg border px-6 py-3 font-medium transition-colors"
            >
              Browse Guides
            </button>
          </div>
        </section>

        <!-- Content Preview Sections -->
        <div class="mt-16 grid grid-cols-1 gap-12 lg:grid-cols-2">
          <!-- Recent Journal Entries -->
          <section class="space-y-6">
            <div class="flex items-center justify-between">
              <h2 class="text-foreground text-2xl font-semibold">
                Recent Practice
              </h2>
              <a
                href="/journal"
                class="text-primary hover:text-primary/80 text-sm font-medium"
              >
                View All →
              </a>
            </div>

            <div class="space-y-4">
              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Putting Practice Session
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Worked on distance control and green reading. Made significant
                  progress on 6-foot putts.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span class="text-muted-foreground">January 15, 2024</span>
                  <span class="bg-muted text-muted-foreground rounded px-2 py-1"
                    >Putting</span
                  >
                </div>
              </div>

              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Driver Lesson Notes
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Focus on hip rotation and keeping head behind ball. Instructor
                  emphasized tempo.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span class="text-muted-foreground">January 20, 2024</span>
                  <span class="bg-muted text-muted-foreground rounded px-2 py-1"
                    >Driver</span
                  >
                </div>
              </div>

              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Short Game Workshop
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Learned new chipping techniques and practiced bunker shots.
                  Great improvement in touch.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span class="text-muted-foreground">January 25, 2024</span>
                  <span class="bg-muted text-muted-foreground rounded px-2 py-1"
                    >Short Game</span
                  >
                </div>
              </div>
            </div>
          </section>

          <!-- Popular Guides -->
          <section class="space-y-6">
            <div class="flex items-center justify-between">
              <h2 class="text-foreground text-2xl font-semibold">
                Popular Guides
              </h2>
              <a
                href="/guides"
                class="text-primary hover:text-primary/80 text-sm font-medium"
              >
                View All →
              </a>
            </div>

            <div class="space-y-4">
              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Putting Fundamentals
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Essential putting techniques and setup for consistent
                  performance on the greens.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span
                    class="bg-accent text-accent-foreground rounded px-2 py-1"
                    >Guide</span
                  >
                  <span class="text-muted-foreground">Updated Jan 22</span>
                </div>
              </div>

              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Driver Setup & Swing
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Complete guide to driver fundamentals, from setup to
                  follow-through.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span
                    class="bg-accent text-accent-foreground rounded px-2 py-1"
                    >Guide</span
                  >
                  <span class="text-muted-foreground">Updated Jan 18</span>
                </div>
              </div>

              <div
                class="bg-card border-border rounded-lg border p-6 transition-shadow hover:shadow-sm"
              >
                <h3 class="text-card-foreground mb-2 font-medium">
                  Course Management
                </h3>
                <p class="text-muted-foreground mb-3 text-sm">
                  Strategic thinking and decision-making to lower your scores on
                  the course.
                </p>
                <div class="flex items-center justify-between text-xs">
                  <span
                    class="bg-accent text-accent-foreground rounded px-2 py-1"
                    >Guide</span
                  >
                  <span class="text-muted-foreground">Updated Jan 10</span>
                </div>
              </div>
            </div>
          </section>
        </div>
      </main>

      <Footer />
    </div>
  </body>
</html>
